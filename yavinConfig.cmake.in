# - Config file for the yavin package
# It defines the following variables
#  YAVIN_INCLUDE_DIRS - include directories for yavin
#  YAVIN_LIBRARIES    - libraries to link against

# Compute paths
get_filename_component(YAVIN_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
set(YAVIN_INCLUDE_DIRS "@CONF_INCLUDE_DIRS@;@OPENGL_INCLUDE_DIR@;@GLM_INCLUDE_DIRS@;@gl3w_DIR@/../include;@GLFW3_INCLUDE_DIRECTORIES@;@GL3W_INCLUDE_DIR@")

# Our library dependencies (contains definitions for IMPORTED targets)
include("${YAVIN_CMAKE_DIR}/yavinTargets.cmake")

# These are IMPORTED targets created by yavinTargets.cmake
set(YAVIN_LIBRARIES @PROJECT_BINARY_DIR@/libyavin.so @OPENGL_gl_LIBRARY@ @OPENGL_glu_LIBRARY@ @GLFW_LIBRARIES@ @PNG_LIBRARIES@  @PNG++_LIBRARIES@)
